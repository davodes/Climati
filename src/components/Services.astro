---
import { Snowflake, Flame, Wind, Wrench, Sun, BarChart3, CheckCircle } from 'lucide-astro';

const services = [
  {
    title: "Aire Acondicionado",
    description: "Instalación y mantenimiento de sistemas de climatización para hogares y oficinas.",
    icon: Snowflake,
    features: ["Instalación profesional", "Mantenimiento preventivo", "Reparaciones urgentes"]
  },
  {
    title: "Calefacción",
    description: "Sistemas de calefacción eficientes y sostenibles para todo tipo de espacios.",
    icon: Flame,
    features: ["Calderas de gas", "Suelo radiante", "Radiadores eficientes"]
  },
  {
    title: "Ventilación",
    description: "Soluciones de ventilación para mejorar la calidad del aire interior.",
    icon: Wind,
    features: ["Extracción de humos", "Ventilación mecánica", "Purificación de aire"]
  },
  {
    title: "Mantenimiento",
    description: "Servicio técnico especializado para garantizar el óptimo funcionamiento.",
    icon: Wrench,
    features: ["Revisiones periódicas", "Limpieza de filtros", "Servicio 24/7"]
  },
  {
    title: "Energía Solar",
    description: "Sistemas de climatización con energía renovable para máxima eficiencia.",
    icon: Sun,
    features: ["Paneles solares", "Aerotermia", "Bomba de calor"]
  },
  {
    title: "Consultoría",
    description: "Asesoramiento profesional para optimizar tu sistema de climatización.",
    icon: BarChart3,
    features: ["Auditoría energética", "Diseño de sistemas", "Certificación energética"]
  }
];
---

<section class="services section-padding" id="servicios">
  <div class="container">
    <div class="services-header">
      <h2 class="services-title">Nuestros Servicios</h2>
      <p class="services-subtitle">
        Soluciones completas de climatización adaptadas a tus necesidades
      </p>
    </div>
    
    <div class="services-grid">
      {services.map((service) => (
        <div class="service-card">
          <div class="service-icon">
            <service.icon size={32} class="icon" />
          </div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          <ul class="service-features">
            {service.features.map((feature) => (
              <li class="service-feature">
                <CheckCircle size={16} class="check-icon" />
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%);
  }

  .services-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .services-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #0EA5E9 0%, #10B981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .services-subtitle {
    font-size: 1.25rem;
    color: #64748B;
    max-width: 600px;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(229, 231, 235, 0.8);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    will-change: transform;
  }

  .service-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #0EA5E9 0%, #10B981 100%);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .icon {
    color: white;
  }

  .service-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #1F2937;
  }

  .service-description {
    color: #64748B;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    color: #374151;
  }

  .check-icon {
    color: #10B981;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .services-title {
      font-size: 2rem;
    }

    .service-card {
      padding: 1.5rem;
    }
  }
</style>